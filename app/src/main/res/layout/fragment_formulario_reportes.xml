<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormularioReportesFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="83dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/titulos"
                android:fontFamily="@font/secularone_regular"
                android:text="Reportes Bimestrales"
                android:textAlignment="center"

                android:textColor="@color/negro"
                android:textSize="20dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardBackgroundColor="@color/otro"
                app:cardCornerRadius="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/secularone_regular"
                        android:text="Añadir video:"
                        android:textColor="@color/negro"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/video_reporte"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/gris"
                        android:fontFamily="@font/secularone_regular"
                        android:text="Video con extensión .mp4 "
                        android:textColor="@color/negro"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/secularone_regular"
                        android:text="Añadir 3 fotos
                        del estado actual de la mascotas en un documento .pdf:"
                        android:textColor="@color/negro"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/pdf_evidencia_mascota"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/gris"
                        android:fontFamily="@font/secularone_regular"
                        android:text="Subir en formato PDF"
                        android:textColor="@color/negro"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/secularone_regular"
                        android:text="Añadir 3 fotos de la
                        cartilla de vacunación de la mascota en un documento .pdf"
                        android:textColor="@color/negro"
                        android:textSize="20sp" />
                    <Button
                        android:id="@+id/pdf_cartilla"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/gris"
                        android:fontFamily="@font/secularone_regular"
                        android:text="Subir en formato PDF"
                        android:textColor="@color/negro"
                        android:textSize="16sp" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/solicitar_adopcion"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/azul_claro"
                android:fontFamily="@font/secularone_regular"
                android:text="Enviar"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/cancelar_adopcion"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/botones"
                android:fontFamily="@font/secularone_regular"
                android:text="Cancelar"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
